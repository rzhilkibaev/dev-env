[push]
    default = simple
[diff]
    tool = nvimdiff
[merge]
    tool = mygitmerge
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[mergetool "mygitmerge"]
    cmd = mygitmerge nvim $BASE $LOCAL $REMOTE $MERGED
    keepBackup = false
    trustExitCode = true
[alias]
    co = checkout
    st = status
    ci = commit
    lo = log --graph --decorate --abbrev-commit
    dt = difftool
    mt = mergetool
